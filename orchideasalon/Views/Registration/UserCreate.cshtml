@model orchideasalon.Models.RegistrationModel

@{
    ViewData["Title"] = "Створення запису";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="container text-center fw-bold">
        <h2>Створення запису</h2>
        <p>___</p>
    </div>
    <div class="container col-md-4">
        <form asp-action="UserCreate" class="d-flex flex-column gap-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service" class="control-label"></label>
                <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control"/>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row justify-content-center">
                <input type="submit" value="Записатися" class="btn btn-dark btn-lg px-4 me-md-2 fs-6 rounded-0"/>
            </div>
        </form>
    </div>
</div>